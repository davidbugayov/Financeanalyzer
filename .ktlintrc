# ktlint configuration file
# Rules: https://ktlint.github.io/#rules

# Enable all rules by default
ktlint_code_style = android_studio
ktlint_ignore_back_ticked_identifier = false
ktlint_standard_no-wildcard-imports = true
ktlint_standard_filename = true
ktlint_standard_trailing-comma-on-call-site = false
ktlint_standard_trailing-comma-on-declaration-site = false
ktlint_standard_no-unit-return = false
ktlint_standard_no-unused-imports = true
ktlint_standard_import-ordering = true
ktlint_standard_annotation-spacing = true
ktlint_standard_argument-list-wrapping = false
ktlint_standard_chain-wrapping = false
ktlint_standard_comment-spacing = true
ktlint_standard_enum-entry-name-case = true
ktlint_standard_function-naming = true
ktlint_standard_if-else-bracing = true
ktlint_standard_import-layout = true
ktlint_standard_kdoc-wrapping = false
ktlint_standard_modifier-order = true
ktlint_standard_no-line-break-after-else = false
ktlint_standard_no-line-break-before-assignment = false
ktlint_standard_no-multi-spaces = true
ktlint_standard_no-single-line-block-comment = false
ktlint_standard_no-trailing-spaces = true
ktlint_standard_no-unit-return = false
ktlint_standard_no-wildcard-imports = true
ktlint_standard_parameter-list-wrapping = false
ktlint_standard_spacing-around-colon = true
ktlint_standard_spacing-around-comma = true
ktlint_standard_spacing-around-dot = false
ktlint_standard_spacing-around-keyword = true
ktlint_standard_spacing-around-operators = true
ktlint_standard_spacing-around-range = false
ktlint_standard_string-parameter-wrapping = false
ktlint_standard_trailing-comma-on-call-site = false
ktlint_standard_trailing-comma-on-declaration-site = false
ktlint_standard_wrapping = true

# Experimental rules
ktlint_experimental_annotation-spacing = true
ktlint_experimental_argument-list-wrapping = false
ktlint_experimental_chain-wrapping = false
ktlint_experimental_comment-spacing = true
ktlint_experimental_enum-entry-name-case = true
ktlint_experimental_function-naming = true
ktlint_experimental_if-else-bracing = true
ktlint_experimental_import-layout = true
ktlint_experimental_kdoc-wrapping = false
ktlint_experimental_modifier-order = true
ktlint_experimental_no-line-break-after-else = false
ktlint_experimental_no-line-break-before-assignment = false
ktlint_experimental_no-multi-spaces = true
ktlint_experimental_no-single-line-block-comment = false
ktlint_experimental_no-trailing-spaces = true
ktlint_experimental_no-unit-return = false
ktlint_experimental_no-wildcard-imports = true
ktlint_experimental_parameter-list-wrapping = false
ktlint_experimental_spacing-around-colon = true
ktlint_experimental_spacing-around-comma = true
ktlint_experimental_spacing-around-dot = false
ktlint_experimental_spacing-around-keyword = true
ktlint_experimental_spacing-around-operators = true
ktlint_experimental_spacing-around-range = false
ktlint_experimental_string-parameter-wrapping = false
ktlint_experimental_trailing-comma-on-call-site = false
ktlint_experimental_trailing-comma-on-declaration-site = false
ktlint_experimental_wrapping = true
