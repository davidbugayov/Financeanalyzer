<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон с градиентом -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#667EEA"
                android:endColor="#764BA2"
                android:angle="135" />
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"
                android:alpha="0.4" />
        </shape>
    </item>
    
    <!-- Верхняя секция - баланс -->
    <item android:gravity="top|center_horizontal" android:top="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <size
                android:width="80dp"
                android:height="24dp" />
        </shape>
    </item>
    
    <!-- Средняя секция - доходы -->
    <item android:gravity="center_vertical|start" android:start="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="6dp" />
            <size
                android:width="20dp"
                android:height="16dp" />
        </shape>
    </item>
    
    <!-- Нижняя секция - расходы -->
    <item android:gravity="center_vertical|end" android:end="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#F44336" />
            <corners android:radius="6dp" />
            <size
                android:width="20dp"
                android:height="16dp" />
        </shape>
    </item>
    
    <!-- Декоративные элементы -->
    <item android:gravity="top|start" android:top="4dp" android:start="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="8dp"
                android:height="8dp" />
            <alpha android:alpha="0.3" />
        </shape>
    </item>
    
    <item android:gravity="bottom|end" android:bottom="4dp" android:end="4dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="6dp"
                android:height="6dp" />
            <alpha android:alpha="0.2" />
        </shape>
    </item>
</layer-list>
