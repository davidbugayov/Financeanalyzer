<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Белый фон с серой рамкой -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Первая секция - баланс (цвет дохода) -->
    <item android:gravity="start|center_vertical" android:start="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#00C853" />
            <corners android:radius="3dp" />
            <size
                android:width="20dp"
                android:height="5dp" />
        </shape>
    </item>
    
    <!-- Разделитель 1 -->
    <item android:gravity="start|center_vertical" android:start="52dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <size
                android:width="1dp"
                android:height="16dp" />
        </shape>
    </item>
    
    <!-- Вторая секция - доходы -->
    <item android:gravity="start|center_vertical" android:start="64dp">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="3dp" />
            <size
                android:width="18dp"
                android:height="4dp" />
        </shape>
    </item>
    
    <!-- Разделитель 2 -->
    <item android:gravity="start|center_vertical" android:start="92dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <size
                android:width="1dp"
                android:height="16dp" />
        </shape>
    </item>
    
    <!-- Третья секция - расходы -->
    <item android:gravity="start|center_vertical" android:start="104dp">
        <shape android:shape="rectangle">
            <solid android:color="#F44336" />
            <corners android:radius="3dp" />
            <size
                android:width="18dp"
                android:height="4dp" />
        </shape>
    </item>
</layer-list>
