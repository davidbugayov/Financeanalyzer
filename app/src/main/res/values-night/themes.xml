<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Темная тема приложения -->
    <style name="Theme.FinanceAnalyzer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Тема для диалогов -->
    <style name="Theme.FinanceAnalyzer.Dialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width</item>
        <item name="android:padding">@dimen/dialog_padding</item>
        <item name="cornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Тема для всплывающих окон -->
    <style name="Theme.FinanceAnalyzer.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@android:color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <!-- Тема для нижнего листа -->
    <style name="Theme.FinanceAnalyzer.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@android:color/black</item>
        <item name="behavior_peekHeight">@dimen/height_bottom_sheet</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>

    <style name="Theme.FinanceAnalyzer.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FinanceAnalyzer</item>
    </style>
</resources> 