<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Темная тема приложения -->
    <style name="Theme.FinanceAnalyzer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Удалены неиспользуемые night-стили -->

    <style name="Theme.FinanceAnalyzer.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FinanceAnalyzer</item>
    </style>
</resources> 